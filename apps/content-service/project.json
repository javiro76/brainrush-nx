{
  "name": "content-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/content-service/src",
  "projectType": "application",
  "tags": ["scope:content"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": [
          "node-env=production",
          "--env=PRISMA_CLIENT_PATH=node_modules/.prisma/content-client"
        ]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "content-service:build",
        "runBuildTargetDependencies": false,
        "inspect": "inspect",
        "port": 9231
      },
      "configurations": {
        "development": {
          "buildTarget": "content-service:build:development"
        },
        "production": {
          "buildTarget": "content-service:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "prisma-generate": {
      "executor": "@nx-tools/nx-prisma:generate",
      "options": {
        "schema": "apps/content-service/prisma/schema.prisma"
      }
    },
    "prisma-migrate-dev": {
      "executor": "@nx-tools/nx-prisma:migrate-dev",
      "options": {
        "schema": "apps/content-service/prisma/schema.prisma"
      }
    },
    "prisma-studio": {
      "executor": "@nx-tools/nx-prisma:studio",
      "options": {
        "schema": "apps/content-service/prisma/schema.prisma"
      }
    }
  }
}
